<link rel='stylesheet' href='css/app.css'>
{{#partial "content"}}
    {{#if sightings}}
        <h2 class="text-center"style="color: black;font-size: xx-large;font-weight: 600;">All Locations</h2>
        <ul class="list-group" style=" background-color:transparent;">
        {{#each sightings}}
            <li class="list-group-item" style="background-color:transparent; opacity:0.1"><a href="/sightings/{{location}}/details">{{location}}</a></li>
        {{/each}}
        </ul>
    {{else}}
        <h5 class="text-center">No locations have been added. Report a admin to add a new location</h5>
    {{/if}}

{{/partial}}

{{> layout.hbs}}