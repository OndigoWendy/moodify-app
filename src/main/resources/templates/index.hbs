<link rel='stylesheet' href='css/app.css'>
{{#partial "content"}}
    {{#if sightings}}
        <h4 class="text-center" style=" color: #fff;font-size: xx-large;font-weight: 500;">SIGHTING DETAILS</h4>
        <table class="table text-center" >
            <thead style="background-color:#fff; color:black;">
            <tr>
                <th scope="col"  >Ranger</th>
                <th scope="col" >Animal</th>
                <th scope="col"  >Location</th>
                <th scope="col"  >Date Spotted</th>
            </tr>
            </thead>
            <tbody style="color:#fff;">
            {{#each sightings}}
                <tr>
                    <td>{{rangerName}}</a></td>
                    <td>{{animalName}}</td>
                    <td>{{location}}</td>
                    <td>{{readableTimestamp}}</td>

                </tr>
            {{/each}}
            </tbody>
        </table>
    {{else}}
        <h5 class="text-center">No recent sightings.Record a new one!</h5>
    {{/if}}
{{/partial}}

{{> layout.hbs}}